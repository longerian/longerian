<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="基本信息"
		    android:textSize="25sp"
		    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="昵称： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/nick"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="数字ID： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/user_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="字符串ID： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/uid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="创建账户时间： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/created"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="上次访问时间： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/last_visit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="账户类型： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/type"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dip"
	    android:text="买家信用"
	    android:textSize="25sp"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="好评数： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/good_num"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="信用等级： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/level"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="总分： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/score"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="总评数： "
		    android:textSize="20sp"
		    />
	    <TextView 
		    android:id="@+id/total_num"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dip"
		    android:text="default"
		    android:textSize="20sp"
		    />
	</LinearLayout>    
</LinearLayout>
</ScrollView>